<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProgettoAPL.ViewModels"
             x:Class="ProgettoAPL.Views.RegisterPage"
             BackgroundColor="#F3F4F6">

    <ContentPage.BindingContext>
        <vm:RegisterViewModel />
    </ContentPage.BindingContext>
    
    <Grid>
        <!-- Sfondo principale -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Layout principale -->
        <StackLayout Grid.Row="1" 
                     VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="Center" 
                     Padding="20"
                     Spacing="25">
            <!-- Titolo -->
            <Label Text="CoAuthLab - Registrazione"
                   FontSize="40"
                   TextColor="#5387a5"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <!-- Form -->
            <Frame BackgroundColor="#5387a5" 
                   CornerRadius="15"
                   Padding="25"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <!-- Campo Nome -->
                    <Frame BackgroundColor="#F3F4F6" CornerRadius="10" Padding="0">
                        <Entry Placeholder="Name"
                           x:Name="NameEntry"
                           Text="{Binding Username, Mode=TwoWay}"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HeightRequest="50"
                           Margin="0" />
                    </Frame>

                    <!-- Campo Email -->
                    <Frame BackgroundColor="#F3F4F6" CornerRadius="10" Padding="0">
                        <Entry Placeholder="Email"
                               x:Name="EmailEntry"
                               Keyboard="Email"
                               Text="{Binding Email, Mode=TwoWay}"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="50"
                               Margin="0" />
                    </Frame>

                    <!-- Campo Password -->
                    <Frame BackgroundColor="#F3F4F6" CornerRadius="10" Padding="0">
                        <Entry Placeholder="Password"
                               x:Name="PasswordEntry"
                               IsPassword="True"
                               Text="{Binding Password, Mode=TwoWay}"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="50"
                               Margin="0" />
                    </Frame>

                    <!-- Campo Ripeti Password -->
                    <Frame BackgroundColor="#F3F4F6" CornerRadius="10" Padding="0">
                        <Entry Placeholder="Ripeti Password"
                               x:Name="RepeatPasswordEntry"
                               IsPassword="True"
                               Text="{Binding RepeatPassword, Mode=TwoWay}"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="50"
                               Margin="0" />
                    </Frame>

                    <!-- Pulsante Registrati -->
                    <Button Text="Registrati"
                            BackgroundColor="#96e2d9"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            FontAttributes="Bold"
                            Command="{Binding RegisterCommand}"
                            IsEnabled="{Binding IsRegistering, Converter={StaticResource InverseBooleanConverter}}" />
                    <ActivityIndicator IsRunning="{Binding IsRegistering}" IsVisible="{Binding IsRegistering}" />
                </StackLayout>
            </Frame>
        </StackLayout>

        <!-- Footer -->
        <Label Grid.Row="2"
               Text="Â© 2024 CoAuthLab. Tutti i diritti riservati."
               FontSize="12"
               TextColor="Gray"
               HorizontalOptions="Center"
               Margin="0,10,0,10" />
    </Grid>
</ContentPage>