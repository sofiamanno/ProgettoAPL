<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProgettoAPL.ViewModels"
             x:Class="ProgettoAPL.Views.LoginPage"
             BackgroundColor="#F3F4F6">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <!-- Sfondo principale -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Layout principale -->
        <StackLayout Grid.Row="0" 
                     VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="Center" 
                     Padding="20"
                     Spacing="25">
            <!-- Titolo -->
            <Label Text="CoAuthLab - Login"
                   FontSize="40"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <!-- Form -->
            <Frame BackgroundColor="#2C3E50" 
                   CornerRadius="15"
                   Padding="25"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <!-- Campo Email -->
                    <Frame BackgroundColor="#F3F4F6" CornerRadius="10" Padding="0">
                        <Entry Placeholder="Email"
                               x:Name="EmailEntry"
                               Text="{Binding Email, Mode=TwoWay}"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="50"
                               Margin="0" />
                    </Frame>

                    <!-- Campo Password -->
                    <Frame BackgroundColor="#F3F4F6" CornerRadius="10" Padding="0">
                        <Entry Placeholder="Password"
                               x:Name="PasswordEntry"
                               IsPassword="True"
                               Text="{Binding Password, Mode=TwoWay}"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="50"
                               Margin="0" />
                    </Frame>

                    <!-- Pulsante Login -->
                    <Button Text="Login"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            FontAttributes="Bold"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBooleanConverter}}" />
                    <ActivityIndicator IsRunning="{Binding IsLoggingIn}" IsVisible="{Binding IsLoggingIn}" />

                    <!-- Etichetta Registrazione -->
                    <Label Text="Non hai un account? Registrati qui."
                           HorizontalOptions="Center"
                           Margin="20,0,0,0"
                           TextColor="#3498DB"
                           FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterLabelTapped"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Password Dimenticata -->
                    <Label Text="Password dimenticata? Clicca qui." HorizontalOptions="Center" Margin="10,0,0,0" TextColor="#3498DB" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnForgotPasswordLabelTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Frame>
        </StackLayout>

        <!-- Footer -->
        <Label Grid.Row="1"
               Text="Â© 2024 CoAuthLab. Tutti i diritti riservati."
               FontSize="12"
               TextColor="Gray"
               HorizontalOptions="Center"
               Margin="0,10,0,10" />
    </Grid>
</ContentPage>